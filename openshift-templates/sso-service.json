{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "sso-service",
    "annotations": {
      "description": "An application for the Red Hat coolstore using a microservice architecture and Red Hat SSO",
      "iconClass": "icon-java",
      "tags": "microservice,jboss,angularjs,keycloak,sso"
    }
  },
  "labels": {
    "application": "sso",
    "createdBy": "template-sso-service",
    "template": "template-sso-service",
    "hystrix.enabled": "true"
  },
  "parameters": [
    {
      "description": "A local Maven Mirror, e.g.: http://nexus.ci.svc.cluster.local:8081/content/groups/public/",
      "name": "MAVEN_MIRROR_URL",
      "value": ""
    },
    {
      "description": "A-MQ cluster admin password",
      "name": "MQ_CLUSTER_PASSWORD",
      "from": "[a-zA-Z0-9]{8}",
      "generate": "expression",
      "required": true
    },
    {
      "description": "JGroups cluster password",
      "name": "JGROUPS_CLUSTER_PASSWORD",
      "from": "[a-zA-Z0-9]{8}",
      "generate": "expression",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "sso"
      },
      "spec": {
        "tags": [
          {
            "name": "latest"
          }
        ]
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "sso"
      },
      "spec": {
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/jamesfalkner/coolstore-microservice"
          },
          "contextDir": "sso-service"
        },
        "strategy": {
          "type": "Docker"
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "sso:latest"
          }
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "sso"
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "recreateParams": {
            "timeoutSeconds": 600
          },
          "resources": {}
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "sso"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "sso:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "deploymentConfig": "sso"
        },
        "template": {
          "metadata": {
            "name": "sso",
            "labels": {
              "application": "sso",
              "deploymentConfig": "sso"
            }
          },
          "spec": {
            "volumes": [
              {
                "name": "eap-keystore-volume",
                "secret": {
                  "secretName": "sso-app-secret"
                }
              },
              {
                "name": "eap-jgroups-keystore-volume",
                "secret": {
                  "secretName": "sso-app-secret"
                }
              },
              {
                "name": "sso-truststore-volume",
                "secret": {
                  "secretName": "sso-app-secret"
                }
              }
            ],
            "containers": [
              {
                "name": "sso",
                "image": "registry.access.redhat.com/redhat-sso-7/sso70-openshift:1.3",
                "ports": [
                  {
                    "name": "jolokia",
                    "containerPort": 8778,
                    "protocol": "TCP"
                  },
                  {
                    "name": "http",
                    "containerPort": 8080,
                    "protocol": "TCP"
                  },
                  {
                    "name": "https",
                    "containerPort": 8443,
                    "protocol": "TCP"
                  },
                  {
                    "name": "ping",
                    "containerPort": 8888,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "OPENSHIFT_KUBE_PING_LABELS",
                    "value": "application=sso"
                  },
                  {
                    "name": "OPENSHIFT_KUBE_PING_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  },
                  {
                    "name": "HTTPS_KEYSTORE_DIR",
                    "value": "/etc/eap-secret-volume"
                  },
                  {
                    "name": "HTTPS_KEYSTORE",
                    "value": "keystore.jks"
                  },
                  {
                    "name": "HTTPS_KEYSTORE_TYPE",
                    "value": "JKS"
                  },
                  {
                    "name": "HTTPS_NAME",
                    "value": "jboss"
                  },
                  {
                    "name": "HTTPS_PASSWORD",
                    "value": "mykeystorepass"
                  },
                  {
                    "name": "JGROUPS_ENCRYPT_SECRET",
                    "value": "sso-app-secret"
                  },
                  {
                    "name": "JGROUPS_ENCRYPT_KEYSTORE_DIR",
                    "value": "/etc/jgroups-encrypt-secret-volume"
                  },
                  {
                    "name": "JGROUPS_ENCRYPT_KEYSTORE",
                    "value": "jgroups.jceks"
                  },
                  {
                    "name": "JGROUPS_ENCRYPT_NAME",
                    "value": "secret-key"
                  },
                  {
                    "name": "JGROUPS_ENCRYPT_PASSWORD",
                    "value": "password"
                  },
                  {
                    "name": "JGROUPS_CLUSTER_PASSWORD",
                    "value": "${JGROUPS_CLUSTER_PASSWORD}"
                  },
                  {
                    "name": "SSO_ADMIN_USERNAME",
                    "value": "admin"
                  },
                  {
                    "name": "SSO_ADMIN_PASSWORD",
                    "value": "admin"
                  },
                  {
                    "name": "SSO_REALM",
                    "value": "myrealm"
                  },
                  {
                    "name": "SSO_SERVICE_USERNAME",
                    "value": "ssoservice"
                  },
                  {
                    "name": "SSO_SERVICE_PASSWORD",
                    "value": "ssoservicepass"
                  },
                  {
                    "name": "SSO_TRUSTSTORE"
                  },
                  {
                    "name": "SSO_TRUSTSTORE_DIR",
                    "value": "/etc/sso-secret-volume"
                  },
                  {
                    "name": "SSO_TRUSTSTORE_PASSWORD"
                  }
                ],
                "resources": {
                  "limits": {
                    "memory": "400Mi"
                  },
                  "requests": {
                    "memory": "200Mi"
                  }
                },
                "volumeMounts": [
                  {
                    "name": "eap-keystore-volume",
                    "readOnly": true,
                    "mountPath": "/etc/eap-secret-volume"
                  },
                  {
                    "name": "eap-jgroups-keystore-volume",
                    "readOnly": true,
                    "mountPath": "/etc/jgroups-encrypt-secret-volume"
                  },
                  {
                    "name": "sso-truststore-volume",
                    "readOnly": true,
                    "mountPath": "/etc/sso-secret-volume"
                  }
                ],
                "livenessProbe": {
                  "httpGet": {
                    "path": "/",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "timeoutSeconds": 1,
                  "periodSeconds": 5,
                  "successThreshold": 1,
                  "failureThreshold": 10,
                  "initialDelaySeconds": 120
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "timeoutSeconds": 1,
                  "periodSeconds": 5,
                  "successThreshold": 1,
                  "failureThreshold": 10,
                  "initialDelaySeconds": 15
                },
                "lifecycle": {
                  "preStop": {
                    "exec": {
                      "command": [
                        "/opt/eap/bin/jboss-cli.sh",
                        "-c",
                        ":shutdown(timeout=60)"
                      ]
                    }
                  }
                },
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "Always"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 75,
            "dnsPolicy": "ClusterFirst",
            "serviceAccountName": "sso-service-account",
            "serviceAccount": "sso-service-account",
            "securityContext": {}
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "secure-sso",
        "annotations": {
          "description": "The web server's https port."
        }
      },
      "spec": {
        "ports": [
          {
            "name": "eight",
            "protocol": "TCP",
            "port": 8443,
            "targetPort": 8443
          }
        ],
        "selector": {
          "deploymentConfig": "sso"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "secure-sso",
        "annotations": {
          "description": "Route for application's sso https service."
        }
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "secure-sso"
        },
        "tls": {
          "termination": "passthrough"
        }
      }
    }
  ]
}
